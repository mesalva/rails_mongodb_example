<p id="notice"><%= notice %></p>

<h1>Listing User Rankings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Path</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_rankings.each do |user_ranking| %>
      <tr>
        <td><%= user_ranking.user_id %></td>
        <td><%= user_ranking.path %></td>
        <td><%= user_ranking.points %></td>
        <td><%= link_to 'Show', user_ranking %></td>
        <td><%= link_to 'Edit', edit_user_ranking_path(user_ranking) %></td>
        <td><%= link_to 'Destroy', user_ranking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

